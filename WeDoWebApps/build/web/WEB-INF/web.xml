<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PlayServlet</servlet-name>
        <servlet-class>za.ac.tut.web.PlayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndGameServlet</servlet-name>
        <servlet-class>za.ac.tut.web.EndGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>za.ac.tut.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllGameStatisticsServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewAllGameStatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewSecificPlayerServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewSecificPlayerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewNamesWonServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ViewNamesWonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PlayServlet</servlet-name>
        <url-pattern>/PlayServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndGameServlet</servlet-name>
        <url-pattern>/EndGameServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllGameStatisticsServlet</servlet-name>
        <url-pattern>/ViewAllGameStatisticsServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewSecificPlayerServlet</servlet-name>
        <url-pattern>/ViewSecificPlayerServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewNamesWonServlet</servlet-name>
        <url-pattern>/ViewNamesWonServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>computer_name</param-name>
        <param-value>Siri</param-value>
    </context-param>
    <security-constraint>
        <display-name>playerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>player</web-resource-name>
            <description>Resources available to the player</description>
            <url-pattern>/start.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Authenticate the user</description>
            <role-name>player</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ownerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>owner</web-resource-name>
            <description>Resources available to the owner</description>
            <url-pattern>/view_all_statistics.jsp</url-pattern>
            <url-pattern>/view_names_won.jsp</url-pattern>
            <url-pattern>/view_specific_player.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Authenticate the user</description>
            <role-name>owner</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>GameFRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login_error.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>The  player will play</description>
        <role-name>player</role-name>
    </security-role>
    <security-role>
        <description>They will check the statistics</description>
        <role-name>owner</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/access_denied.jsp</location>
    </error-page>
</web-app>
